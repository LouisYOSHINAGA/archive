\renewcommand{\kanjifamilydefault}{\gtdefault}

%% color definition
\definecolor{ybg}{RGB}{242,242,242}
\definecolor{yblue}{RGB}{32,135,185}
\definecolor{yorange}{RGB}{255,69,0}
\definecolor{ygreen}{RGB}{66,191,157}
\definecolor{ygray}{RGB}{128,128,128}

%% base-style
\usetheme{Madrid}
\usefonttheme{professionalfonts}
\usecolortheme[RGB={32,135,185}]{structure}

\setbeamercolor{background canvas}{bg=ybg}
\setbeamercolor{structure}{fg=yblue}
\setbeamercolor{alerted text}{fg=yorange}
\setbeamercolor{example text}{fg=ygreen}

\setbeamertemplate{caption}{\insertcaption}  % without Fig. in caption
% \setbeamertemplate{footline}[frame number]
\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{itemize item}[circle]
\setbeamertemplate{itemize subitem}[circle]
\setbeamertemplate{itemize subsubitem}[circle]
\setbeamertemplate{enumerate item}[default]
\setbeamertemplate{enumerate subitem}[default]

%% title
\newcommand{\ytitle}[4]{
    \title[#1]{#2}
    \author{#3}
    \date{#4}
}

%% references
\newcommand{\yreference}[2]{
    \begin{frame}
        \frametitle{References}
        \beamertemplatetextbibitems
        \bibliographystyle{#1}
        \bibliography{#2}
    \end{frame}
}
