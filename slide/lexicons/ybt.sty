%% position
\newcommand{\yvspace}[1]{\vspace{#1\baselineskip}}
\newcommand{\yhspace}[1]{\hspace{#1em}}
\newcommand{\yinner}[1]{\setlength{\leftskip}{#1em}}
\newenvironment{yitemize}[1][1]{\begin{itemize}\yinner{#1}}{\end{itemize}}

%% color
\newcommand{\yorangetxt}[1]{\textcolor[RGB]{255,69,0}{#1}}
\newcommand{\ygreentxt}[1]{\textcolor[RGB]{66,191,157}{#1}}
\newcommand{\ybluetxt}[1]{\textcolor[RGB]{32,135,185}{#1}}
\newcommand{\ygraytxt}[1]{\textcolor[RGB]{128,128,128}{#1}}
\newcommand{\yculine}[3]{\def\ULthickness{#1pt}\textcolor[RGB]{#2}{\uline{\textcolor{black}{#3}}}}

%% command
\NewEnviron{yalign}{
    \yvspace{-0.4}
    \begin{align}
        \yhspace{-4}
        \BODY
    \end{align} \\
    \yvspace{-0.4}
}
\NewEnviron{yalign*}{
    \yvspace{-0.4}
    \begin{align*}
        \yhspace{-4}
        \BODY
    \end{align*} \\
    \yvspace{-0.4}
}
\NewEnviron{yagdesc}{
    \ygreentxt{
        \yhspace{1.25} $\to$
        \yvspace{-1}
        \begin{description}
            \small
            \setlength{\leftskip}{-2.8em}
            \BODY
        \end{description}
    }
}
\newcommand{\yhrulefill}{\yvspace{-0.7}\hrulefill}
\newcommand{\yfig}[2]{
    \begin{figure}[htb]
        \centering
        \includegraphics[#1]{#2}
    \end{figure}
    \yvspace{-0.5}
}
\newcommand{\ycaption}[1]{\vspace{-0.6\baselineskip}\caption{#1}}
\newcommand{\yfigcap}[3]{
    \begin{figure}[htb]
        \centering
        \includegraphics[#1]{#2}
        \ycaption{#3}
    \end{figure}
    \yvspace{-1.2}
}
\newcommand{\yhead}[1]{\ \textcolor[RGB]{32,135,185}{#1}}
\newcommand{\ybox}[1]{{\centering\fbox{\begin{tabular}{c}#1\end{tabular}}\\}}

%% symbol
\newcommand{\yitemsquare}{{\fontsize{3.5pt}{1cm}\selectfont \structure{$\blacksquare$}}}
\newcommand{\ydownarrow}{\centering{\Large$\Downarrow$}\\}
